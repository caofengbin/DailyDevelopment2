<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                 xmlns:tools="http://schemas.android.com/tools"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                tools:context="cfb.com.dailydevelopment2.example5.horizontallistview2.HorizontalListActivity2">

    <TextView
        android:id="@+id/tv_item"
        style="@style/TextViewStyleLeft"
        android:text="名称"
        />

    <cfb.com.dailydevelopment2.example5.horizontallistview2.ObserverHScrollViewIntercept
        android:id="@+id/scrollContainer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item"
        >

        <cfb.com.dailydevelopment2.example5.horizontallistview2.ObserverHScrollView
            android:id="@+id/horizontalScrollView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:gravity="center"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item1"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item2"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item3"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item4"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item5"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item6"
            style="@style/TextViewStyleRight"
            />
        <TextView
            android:id="@+id/tv_item7"
            style="@style/TextViewStyleRight"
            />
        </LinearLayout>
        </cfb.com.dailydevelopment2.example5.horizontallistview2.ObserverHScrollView>
    </cfb.com.dailydevelopment2.example5.horizontallistview2.ObserverHScrollViewIntercept>
</RelativeLayout>